{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blubberfish/frontend/components": [
        "libs/frontend/components/src/index.ts"
      ],
      "@blubberfish/frontend/pages/login": [
        "libs/frontend/pages/login/src/index.ts"
      ],
      "@blubberfish/services/client": ["libs/services/client/src/index.ts"],
      "@blubberfish/services/core": ["libs/services/core/src/index.ts"],
      "@blubberfish/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
