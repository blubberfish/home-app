{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blubberfish/frontend/hooks": ["libs/frontend/hooks/src/index.ts"],
      "@blubberfish/frontend/modules/core": [
        "libs/frontend/modules/core/src/index.ts"
      ],
      "@blubberfish/frontend/modules/cradle-baby/app": [
        "libs/frontend/modules/cradle-baby/app/src/index.ts"
      ],
      "@blubberfish/frontend/pages/cradle-baby-login": [
        "libs/frontend/pages/cradle-baby-login/src/index.ts"
      ],
      "@blubberfish/frontend/pages/cradle-baby-register": [
        "libs/frontend/pages/cradle-baby-register/src/index.ts"
      ],
      "@blubberfish/frontend/pages/cradle-baby-routes": [
        "libs/frontend/pages/cradle-baby-routes/src/index.ts"
      ],
      "@blubberfish/frontend/ui/components": [
        "libs/frontend/ui/components/src/index.ts"
      ],
      "@blubberfish/frontend/ui/theme": ["libs/frontend/ui/theme/src/index.ts"],
      "@blubberfish/services/client": ["libs/services/client/src/index.ts"],
      "@blubberfish/services/core": ["libs/services/core/src/index.ts"],
      "@blubberfish/style-system": ["libs/frontend/style-system/src/index.ts"],
      "@blubberfish/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
